<div class="main-container">
  <div class="container">
    <div class="row">
      <div class="col-sm-5 login-box">
        <div class="panel panel-default">
          <div class="panel-intro text-center">
            <h2 class="logo-title">

            <span class="logo-icon"><i class="icon icon-search-1 ln-shadow-logo shape-0"></i> </span> i<span>Virtue </span>
            </h2>
          </div>
          <div class="panel-body">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-group">
                <label for="sender-email" class="control-label">Username:</label>
                <div class="input-icon"><%=fa_icon "user"%>
                  <%= f.email_field :email, autofocus: true,class:'form-control email', id:'sender-email',placeholder:"Username" %>
                </div>
              </div>
            <div class="form-group">
                <label for="user-pass" class="control-label">Password:</label>
                <div class="input-icon"><%=fa_icon "lock"%>
                  <%= f.password_field :password, autocomplete: "off",class:"form-control",placeholder:"Password",id:"user-pass" %>
                </div>
              </div>
              <div class="form-group">
                <%= f.submit "Submit",class:"btn btn-primary  btn-block" %>
              </div>
          </div>
          <div class="panel-footer">
            <div class="checkbox pull-left">  
              <% if devise_mapping.rememberable? -%>
                <label> <%= f.check_box :remember_me %> Keep me logged
                in</label>
              <% end -%>
            </div>
            <p class="text-center pull-right"><a href="forgot-password.html"> Lost your password? </a>
            </p>
            <div style=" clear:both"></div>
          </div>
        <%end%>
        </div>
        <div class="login-box-btm text-center">
          <p> Don't have an account? <br>
          <a href="<%= new_registration_path(resource_name) %>"><strong>Sign Up !</strong> </a></p>
        </div>
      </div>
    </div>
  </div>
</div>

